<databus>
  <defaults>
    <rootdir>/tmp/databus</rootdir>
    <retentionindays>2</retentionindays>
  </defaults>

  <!-- A stream can have only one primary and multiple mirrors as destinations
    -->
  <streams>
    <stream name="testclient">
      <sources>
        <source>
          <name>testcluster</name>
          <retentionindays>2</retentionindays>
        </source>
      </sources>
      <destinations>
      </destinations>
    </stream>
  </streams>

  <clusters>
    <cluster name="testcluster" hdfsurl="file:///"
             jturl="local">
    </cluster>

  </clusters>
</databus>
