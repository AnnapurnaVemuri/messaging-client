    <stream name="testclient">
      <sources>
        <source>
          <name>testcluster1</name>
          <retentionindays>1</retentionindays>
        </source>
        <source>
          <name>testcluster2</name>
          <retentionindays>1</retentionindays>
        </source>
        <source>
          <name>testcluster3</name>
          <retentionindays>1</retentionindays>
        </source>
      </sources>
      <destinations>
      </destinations>
    </stream>
  </streams>

  <clusters>
